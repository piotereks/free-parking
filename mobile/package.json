{
  "name": "mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start --offline",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:vitest": "vitest",
    "test:watch": "jest --watch",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "prebuild": "expo prebuild",
    "android:build": "cd android && gradlew assembleRelease",
    "android:install": "adb install android/app/build/outputs/apk/release/app-release.apk",
    "android:deploy": "cd android && gradlew installRelease"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "expo": "~54.0.30",
    "expo-status-bar": "~3.0.9",
    "nativewind": "^2.0.11",
    "parking-shared": "file:../shared",
    "postcss": "^8.4.31",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "tailwindcss": "3.3.2",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.24.0",
    "@testing-library/react-native": "^12.9.0",
    "babel-jest": "^29.7.0",
    "babel-preset-expo": "^54.0.9",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "^29.7.0",
    "react-test-renderer": "19.1.0",
    "vitest": "^0.34.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|expo|@expo|parking-shared)/)"
    ],
    "moduleNameMapper": {
      "^parking-shared$": "<rootDir>/../shared/src/index.js"
    },
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  },
  "private": true
}
